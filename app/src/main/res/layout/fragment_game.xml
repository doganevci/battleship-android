<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dogan.amiral.GameActivity$PlaceholderFragment">

    <TextView
        android:id="@+id/section_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <GridView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_margin="0dp"
        android:numColumns="15"

        android:horizontalSpacing="0dp"
        android:verticalSpacing="1dp"

        android:id="@+id/gridView" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:id="@+id/layoutShipper"
            android:visibility="gone"
            android:layout_height="wrap_content">

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerShip"
                android:entries="@array/ships"
                android:layout_weight="1" />

            <Button
                android:text="GENERATE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnGenerate"
                android:layout_weight="1" />
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:id="@+id/layoutStartGame"
            android:visibility="gone"
            android:layout_height="wrap_content">



            <Button
                android:text="STARTGAME"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnStartGame"
                android:layout_weight="1" />
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:id="@+id/layoutBomber"
            android:visibility="gone"
            android:layout_height="wrap_content">

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner"
                android:entries="@array/bombs"
                android:layout_weight="1" />

            <Button
                android:text="SEND THE FIRE!"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnFire"
                android:layout_weight="1" />
        </LinearLayout>



    </LinearLayout>

</LinearLayout>
